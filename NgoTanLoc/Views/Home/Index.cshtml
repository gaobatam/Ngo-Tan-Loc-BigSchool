@model IEnumerable<NgoTanLoc.Models.Course>
@{
    ViewBag.Title = "Home Page";
}

<div class="course">
   <ul>
       @foreach (var course in Model)
            {
                <li>
                   <div class="datetime">
                       <div class="month">
                           @course.DateTime.ToString("MM")
                       </div>
                       <div class="day">
                           @course.DateTime.ToString("dd")
                       </div>
                   </div>

                    <div class="detail">
                        <span class="lecturer">
                            @course.Lecture.Name
                        </span>
                        <span class="category">
                            @course.Category.Name
                        </span>
                    </div>
                </li>
            }
   </ul>
</div>